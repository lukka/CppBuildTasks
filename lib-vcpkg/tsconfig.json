{
    "extends": "../tsconfig-base.json",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        // https://github.com/microsoft/TypeScript/issues/9858: 
        // Use this folder as the relative basis for computing the paths in outDir". Which 
        // files are part of your compilation is a separate question that is answered by 
        // files and/or include/exclude
        //"rootDir": "",
        "outDir": "../build/lib-vcpkg",
        "strictNullChecks": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,
    },
    "references": [], // * Any project that is referenced must itself have a `references` array (which may be empty).
    "exclude": [
        "node_modules",
        "build"
    ]
}